<h1>Books</h1>
<table>
  <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <%= link_to 'show', book_path(book.id) %>
        <td>
          <%= link_to 'edit', edit_book_path(book.id) %>
        </td>
        <td>
          <%= link_to 'Destroy', book_path(book.id), method: :delete,"date-confirm" => "本当に削除しますか？" %>
        </td>
      </tr>
      <% end %>
    </tbody>
</table>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>

  <div class="actions">
    <input type="submit" name="commit" value="Create Book" data-disable-with="Create Book">
  </div>

<% end %>
