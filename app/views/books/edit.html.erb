<h2>Editing Book</h2>

<%= form_with model: @book do |f| %>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>errors prohibited this book from being saved::</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
     
<% end %>

  <h5>Title</h5>
  <%= f.text_field :title %>

  <h5>Body</h5>
  <%= f.text_area :body %>
  <div class="actions">
    <input type="submit" name="commit" value="Update Book" data-disable-with="Create Book">
  </div>

  <div class>
    <%= link_to 'Show', book_path(@book.id) %>
    <%= link_to 'Back', books_path %>
  </div>
<% end %>